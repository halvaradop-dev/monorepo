{
  "display": "Node 20",
  "_version": "20.1.0",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "lib": ["es2023"],
    "module": "CommonJS",
    "target": "es2022",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "dist",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}