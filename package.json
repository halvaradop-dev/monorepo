{
  "name": "@halvaradop/monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "A monorepo setup for managing multiple packages with shared configurations and dependencies.",
  "type": "module",
  "scripts": {
    "test": "vitest --run",
    "test:watch": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build:tsup": "turbo build:tsup --parallel",
    "build:vite": "turbo build:vite --parallel",
    "build:all": "turbo build:all --parallel",
    "dev": "turbo build --parallel"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@halvaradop/tailwindcss-utilities": "^0.2.2",
    "@types/node": "^20.14.10",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "turbo": "^2.1.2",
    "typescript": "^5.5.3",
    "vite": "^5.4.5",
    "vite-plugin-dts": "^4.2.1",
    "vitest": "^2.0.5"
  },
  "packageManager": "pnpm@9.0.0-rc.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "prettier": {
    "tabWidth": 4,
    "arrowParens": "avoid",
    "printWidth": 130,
    "singleQuote": false,
    "semi": false,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": [
          "**/*.json",
          "**/README.md",
          "**/*.yaml"
        ],
        "options": {
          "tabWidth": 2,
          "useTabs": false,
          "printWidth": 80
        }
      }
    ]
  }
}
